{
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
  },
  "root": true,
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "rules": {
    // other rules
    "camelcase": 1, // to allow 'UNSAFE_...' functions
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }]
  }
}
